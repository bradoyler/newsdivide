<meta property="og:description" content="Snapshots from NBCNews.com"/>
<meta property="og:image" content="https://newsdivide.bradoyler.com/day/{{date-slug}}/newsdivide.jpg"/>
<meta name="twitter:card" content="summary_large_image"/>
<meta name="twitter:site" content="@newsdivide"/>
<meta name="twitter:title" content="test: {{date-short}}"/>
<meta name="twitter:description" content="Snapshots from test"/>
<meta name="twitter:creator" content="@thenewsdivide"/>
<meta name="twitter:domain" content="bradoyler.github.io"/>
<meta name="twitter:image" content="https://newsdivide.bradoyler.com/day/{{date-slug}}/newsdivide.jpg"/>
<title>test: {{date-short}}</title>
<script type="text/javascript">
  var baseUrl = 'https://newsdivide.bradoyler.com/day/{{date-slug}}/';
</script>
</head>
<body>
<style>
  .image {
    max-height: 660px;
    max-width: 98%;
    margin-left: 6px;
    box-shadow: 0 0 .7em #999;
    margin-top: 1em;
  }

  .title {
    font-family: monospace;
    font-size: 1.5em;
  }
</style>
<div class="container swiper-container">
  <div class="row swiper-wrapper">
    <div class="mobile_sites col-sm-4 col-xs-12 swiper-slide">
      <div class="title">Mobile</div>
    </div>
    <div class="desktop_sites col-sm-8 col-xs-12 swiper-slide">
      <div class="title">Desktop</div>
    </div>
  </div>
  <hr />
  <h2>
    <a href="/day/{{yesterday-slug}}/index2.html"> << ({{yesterday-short}})</a>
  </h2>
  <h4>
    <a target="blank" href="https://twitter.com/thenewsdivide">Feedback / Questions?</a>
  </h4>
</div>

<script type="text/javascript">
 var isMobile = (function () {
    var check = false;
    if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {
      check = true;
    }
    return check;
 }());
 $(function(){
   var data = {{{sites}}};
   var jsDate = new Date();
   var hour = new Date().getHours();
   var min = Math.round(jsDate.getMinutes() / 9);
   var minOfDay = hour + '_' + min;

   data.mobile.forEach(function(page){
     $('.mobile_sites').append('<a href="'+page.url+'" target="blank"><img class="image" src="'+ baseUrl + page.image +'?min='+ minOfDay +'" /></a>');
   });
   data.desktop.forEach(function(page){
     $('.desktop_sites').append('<a href="'+page.url+'" target="blank"><img class="image" src="'+ baseUrl + page.image +'?min='+ minOfDay +'" /></a>');
   });

   var swipeEffect = isMobile ? 'coverflow' : 'slide';
   var swiper = new Swiper('.swiper-container', {
          effect: swipeEffect,
          initialSlide: 1,
          grabCursor: false,
          centeredSlides: false,
          slidesPerView: 2,
          breakpoints: {
              1024: { slidesPerView: 2, spaceBetween: 10},
              768: { slidesPerView: 2, spaceBetween: 10},
              420: { slidesPerView: 1, spaceBetween: 0},
              320: { slidesPerView: 1, spaceBetween: 0}
          },
          coverflow: {
              rotate: 10,
              stretch: 0,
              depth: 10,
              modifier: 1,
              slideShadows : false
          }
    });
 });
</script>

