<script type="text/javascript">
  var baseUrl = 'https://newsdivide.bradoyler.com/day/{{date-slug}}/';
</script>
</head>
<body class="sans-serif ph4-l w-80-l center">
<div class="nav w-100 bg-white bb">
  <ul class="list ma0 pa0 tc f5">
    <li class="dib pa2"><a class="link pointer ph3 pv1 br2 mb2 mh2 dib white bg-dark-gray" id="archive" href="/day/{{yesterday-slug}}" class="btn"><< {{yesterday-short}}</a></li>
    <li class="dib pa2"><a class="link pointer ph3 pv1 br2 mb2 mh2 dib gray bg-light-gray ba b--dark-gray" id="compact">Compact mode</a></li>
    <li class="dib pa2"><a class="link pointer ph3 pv1 br2 mb2 mh2 dib white bg-black" target="_blank" href="https://twitter.com/intent/tweet?source=tweetbutton&url=https://newsdivide.bradoyler.com/day/{{date-slug}}/&text={{date-short}}&via=thenewsdivide" class="btn">Tweet this</a></li>
  </ul>
</div>
<div class="container swiper-container">
  <div class="row swiper-wrapper">
    <div class="left_sites w-third-l w-100 swiper-slide">
      <div class="f6 pa2 tc">LEFT</div>
    </div>
    <div class="center_sites w-third-l w-100 swiper-slide">
      <div class="f6 pa2 tc">CENTER</div>
    </div>
    <div class="right_sites w-third-l w-100 swiper-slide">
      <div class="f6 pa2 tc">RIGHT</div>
    </div>
  </div>
  <hr />
  <h2>
    <a class="link black" href="/day/{{yesterday-slug}}"> << ({{yesterday-short}})</a>
  </h2>
  <h4>
    <a class="link black underline" target="blank" href="https://twitter.com/thenewsdivide">Feedback / Questions?</a>
  </h4>
</div>

<script type="text/javascript">
 var isMobile = (function () {
    var check = false;
    if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {
      check = true;
    }
    return check;
 }());
 $(function(){
   var data = {{{sites}}};
   var jsDate = new Date();
   var hour = new Date().getHours();
   var min = Math.round(jsDate.getMinutes() / 9);
   var minOfDay = hour + '_' + min;
   var imageClasses = "center w-100 mb2"
   var linkClasses = "pa0 ma0"

   data.left_sites.forEach(function(page){
     var imgUrl = baseUrl + page.image
     $('.left_sites').append(`<a class="${linkClasses}" href="${page.url}" target="blank"><img class="image ${imageClasses}" src="${imgUrl}?min=${minOfDay}" /></a>`);
   });
   data.center_sites.forEach(function(page){
     $('.center_sites').append(`<a class="${linkClasses}" href="${page.url}" target="blank"><img class="image ${imageClasses}" src="${baseUrl + page.image}?min=${minOfDay}" /></a>`);
   });
   data.right_sites.forEach(function(page){
     $('.right_sites').append(`<a class="${linkClasses}" href="${page.url}" target="blank"><img class="image ${imageClasses}" src="${baseUrl + page.image}?min=${minOfDay}" /></a>`);
   });

   var swipeEffect = isMobile ? 'coverflow' : 'slide';
   var swiper = new Swiper('.swiper-container', {
          effect: swipeEffect,
          initialSlide: 1,
          grabCursor: false,
          centeredSlides: true,
          slidesPerView: '3',
          breakpoints: {
              1024: { slidesPerView: 3, spaceBetween: 10},
              420: { slidesPerView: 1, spaceBetween: 0},
              320: { slidesPerView: 1, spaceBetween: 0}
          },
          coverflow: {
              rotate: 10,
              stretch: 0,
              depth: 10,
              modifier: 1,
              slideShadows : false
          }
    });
 });

 window.compactMode = false
 $('#compact').on('click', function () {
   window.compactMode = !window.compactMode
   if (window.compactMode) {
     $('#compact').addClass('o-50')
     $('img').removeClass('w-100 center')
     $('img').addClass('w-50 bn pa0 ma0 fl')
     $('.swiper-slide').addClass('pa0 ma0')
   } else {
     $('#compact').removeClass('o-50')
     $('img').addClass('w-100 center')
     $('img').removeClass('w-50 bn pa0 ma0 fl')
     $('.swiper-slide').addClass('pa0 ma0')
   }
 });

 var refreshInt = 5 * 60 * 1000
 setTimeout(function () {
   window.location.reload(1);
 }, refreshInt)

</script>
